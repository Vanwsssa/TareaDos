<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".ui.home.HomeFragment">

    <!-- Imagen de la sonrisa -->
    <ImageView
        android:id="@+id/image_nina"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sonrisa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Texto principal con sombreado -->
    <TextView
        android:id="@+id/text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸª¥Esta es mi gran sonrisaðŸ¦·"
        android:textSize="20sp"
        android:textColor="@color/titulo"
        android:shadowColor="@color/icono"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        app:layout_constraintTop_toBottomOf="@id/image_nina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <!-- Subtexto -->
    <TextView
        android:id="@+id/subtext_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descibre lo que hay en mi sonrisa"
        android:textSize="16sp"
        android:textColor="@color/sub"
        app:layout_constraintTop_toBottomOf="@id/text_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
