<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo4">

    <ImageView
        android:id="@+id/image_smile"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/parte"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="160dp"/>

    <TextView
        android:id="@+id/text_smile"
        android:layout_width="308dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:shadowColor="@color/icono"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="Asi se ve tu diente de cerca. Es impresionanteðŸ¦·"
        android:textColor="@color/titulo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_smile" />

</androidx.constraintlayout.widget.ConstraintLayout>
